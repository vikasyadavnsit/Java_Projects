{
  "name": "eslint-bridge",
  "version": "1.0.0",
  "description": "bridge between SonarJS and ESLint",
  "scripts": {
    "build": "yarn install && yarn check-format && yarn clear && yarn compile",
    "clear": "tsc -b src tests --clean",
    "check-format": "prettier --list-different \"{src,tests}/**/!(*.lint).ts\"",
    "test": "jest",
    "format": "prettier --write \"{src,tests}/**/!(*.lint).ts\"",
    "compile": "tsc -b src tests",
    "jar": "npm pack && mkdirp target/classes && mv eslint-bridge-1.0.0.tgz target/classes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarJS.git"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarJS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarJS#readme",
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@types/eslint": "4.16.3",
    "@types/eslint-scope": "3.7.0",
    "@types/esprima": "4.0.2",
    "@types/estree": "0.0.39",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.2",
    "@types/node": "13.1.4",
    "fs-extra": "7.0.0",
    "jest": "24.9.0",
    "jest-sonar-reporter": "1.3.0",
    "mkdirp": "^0.5.1",
    "prettier": "2.0.5",
    "ts-jest": "24.1.0",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/experimental-utils": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "babel-eslint": "10.1.0",
    "body-parser": "1.18.3",
    "builtin-modules": "3.1.0",
    "eslint": "5.16.0",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "espree": "5.0.1",
    "express": "4.16.3",
    "run-node": "1.0.0",
    "vue-eslint-parser": "6.0.4"
  },
  "bundledDependencies": [
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/experimental-utils",
    "@typescript-eslint/parser",
    "babel-eslint",
    "body-parser",
    "builtin-modules",
    "eslint",
    "eslint-plugin-chai-friendly",
    "eslint-plugin-sonarjs",
    "express",
    "vue-eslint-parser",
    "run-node"
  ],
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "files": [
    "lib/",
    "bin/"
  ]
}
